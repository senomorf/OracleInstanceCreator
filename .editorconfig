# EditorConfig configuration for OCI Automation Project
# NOTE: All formatting rules disabled to prevent CI/CD formatting failures
# Only charset is enforced - developers have complete formatting freedom

root = true

# All files
[*]
charset = utf-8
# end_of_line = lf                    # Disabled - use any line ending style
# insert_final_newline = unset        # Disabled - don't enforce either way
# trim_trailing_whitespace = unset    # Disabled - don't enforce either way

# Shell scripts
[*.sh]
# indent_style = space  # Disabled - use any indentation style
# indent_size = 4       # Disabled - use any indentation size
# max_line_length = 120

# JavaScript files
[*.js]
# indent_style = space  # Disabled - use any indentation style
# indent_size = 2       # Disabled - use any indentation size
# max_line_length = 120

# JSON files
[*.json]
# indent_style = space  # Disabled - use any indentation style
# indent_size = 2       # Disabled - use any indentation size

# YAML files
[*.{yml,yaml}]
# indent_style = space  # Disabled - use any indentation style
# indent_size = 2       # Disabled - use any indentation size
# Disable line length for YAML files - handled by yamllint instead
# max_line_length = 120

# HTML files
[*.html]
# indent_style = space  # Disabled - use any indentation style
# indent_size = 4       # Disabled - use any indentation size
# max_line_length = 120

# CSS files
[*.css]
# indent_style = space  # Disabled - use any indentation style
# indent_size = 2       # Disabled - use any indentation size
# max_line_length = 120

# Markdown files
[*.md]
# indent_style = space  # Disabled - use any indentation style
# indent_size = 2       # Disabled - use any indentation size
# Line length restrictions disabled - let content flow naturally
# max_line_length = 80
trim_trailing_whitespace = false

# Configuration files
[*.{toml,ini,conf}]
# indent_style = space  # Disabled - use any indentation style
# indent_size = 2       # Disabled - use any indentation size

# Makefiles
[Makefile]
# indent_style = tab    # Disabled - use any indentation style
# indent_size = 4       # Disabled - use any indentation size

# GitHub workflows
[.github/workflows/*.{yml,yaml}]
# indent_style = space  # Disabled - use any indentation style
# indent_size = 2       # Disabled - use any indentation size
# Disable line length enforcement for GitHub workflows to allow long Claude Code prompts
# max_line_length = 120